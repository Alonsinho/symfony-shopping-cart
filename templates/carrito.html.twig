{# templates/carrito.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Carrito{% endblock %}
{% block contenido %}    
	{% if productos is empty %}
		<p>No has añadido productos al carrito</p>
	{% else %}
		<h1 id="titulo" class="display-4">Carrito de productos</b></h1>
    	<table class="table table-hover text-center mt-4">
			<thead>
				<tr>
					<th></th>
					<th>Nombre</th>
					<th>Descripción</th>
					<th>Stock</th>		
					<th>Unidades</th>
					<th>Eliminar</th>
				</tr>
			</thead>
			<tbody>
				{% for prod in productos %}
					<tr>
						<td>
							<img src="{{ asset(prod.urlimg) }}" width=100 height=100>
						</td>
						<td>{{ prod.nombre }}</td>
						<td>{{ prod.descripcion }}</td>
						<td>{{ prod.stock }}</td>
						<td>{{ prod.unidades }}</td>
						<td>
							<form class="form-inline justify-content-center" action={{path('eliminar')}} method='POST'>
								<input class="form-control mr-2" name='unidades' type='number' min='1' value='1'>
								<input class="btn btn-danger" type='submit' value='Eliminar'><input name='cod' type='hidden' value={{prod.codProd}}>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
    	</table>
		<a class="btn btn-success" href={{ path('realizarPedido') }}>Realizar Pedido</a>
	{% endif %}    
	
{% endblock %}
