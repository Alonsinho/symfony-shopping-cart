{# templates/categorias.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}
	Lista de categorías
{% endblock %}
{% block contenido %}
	{% for cat in categorias %}
		<div class="card w-50 mb-4">
			<div class="card-body">
				<div class="row">
					<div class="col-sm-4">
						<img class="img-thumbnail" src="{{ asset(cat.urlimg) }}">
					</div>
					<div class="col-sm-8 d-flex flex-column">
						<div class="flex-fill">
							<h2 class="display-4 mb-4">{{ cat.Nombre }}</h2>
							<p style="font-size: 1.4rem; font-weight: 300">{{ cat.Descripcion }}</p>
						</div>
						<div class="text-right">
							<a class="btn btn-dark" href="{{ path('productos', {'id': cat.CodCat})}}">Ver Categoría</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
